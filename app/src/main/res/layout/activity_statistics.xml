<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ort.num172159_180968.fut5.Statistics">


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgCards"
        android:src="@drawable/cards"
        android:layout_marginStart="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="299dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgBall"
        android:src="@drawable/ball2"
        android:layout_alignTop="@+id/imgCards"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="96dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgCup"
        android:src="@drawable/cup2"
        android:layout_below="@+id/imgCards"
        android:layout_alignStart="@+id/imgCards"
        android:layout_marginTop="108dp" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgBoots"
        android:src="@drawable/boots"
        android:layout_alignTop="@+id/imgCup"
        android:layout_alignEnd="@+id/imgBall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="txtCards"
        android:id="@+id/txtCards"
        android:layout_below="@+id/imgCards"
        android:layout_alignEnd="@+id/txtCup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="txtBall"
        android:id="@+id/txtBall"
        android:layout_alignTop="@+id/txtCards"
        android:layout_alignStart="@+id/txtBoots" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="txtCup"
        android:id="@+id/txtCup"
        android:layout_below="@+id/imgCup"
        android:layout_alignStart="@+id/imgCup" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="txtBoots"
        android:id="@+id/txtBoots"
        android:layout_alignBottom="@+id/txtCup"
        android:layout_alignEnd="@+id/imgBoots" />


</RelativeLayout>
