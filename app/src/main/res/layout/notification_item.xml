<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgNotificationIcon"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Very very very very very very very very very long long logn line"
        android:id="@+id/txtNotification"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imgNotificationIcon"
        android:autoText="false"
        android:maxHeight="100dp"
        android:maxLines="3"
        android:minLines="1"
        android:nestedScrollingEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/imgNotificationIcon"
        android:gravity="center" />
</RelativeLayout>