<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgGoals"
        android:src="@drawable/ball2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgCards"
        android:src="@drawable/cards"
        android:layout_below="@+id/pickerGoalsPlayer"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imgPannas"
        android:src="@drawable/boots"
        android:layout_alignTop="@+id/pickerPannas"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yellow Card"
        android:id="@+id/checkYellow"
        android:checked="false"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/pickerGoalsPlayer"
        android:layout_toEndOf="@+id/imgCards" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Card"
        android:id="@+id/checkRed"
        android:checked="false"
        android:layout_below="@+id/checkYellow"
        android:layout_toEndOf="@+id/imgCards" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickerGoalsPlayer"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/checkRed" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickerPannas"
        android:orientation="horizontal"
        android:layout_below="@+id/imgCards"
        android:layout_toEndOf="@+id/checkRed"
        android:layout_marginTop="37dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/btnSaveUserStatistics"
        android:layout_below="@+id/pickerPannas"
        android:layout_toEndOf="@+id/imgPannas"
        android:layout_marginTop="42dp" />

</RelativeLayout>