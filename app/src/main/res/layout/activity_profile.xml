<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Profile"
    android:background="@drawable/grass2">

    <com.facebook.login.widget.ProfilePictureView
        android:id="@+id/profilePicturePerfil"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"

        android:layout_gravity="center_horizontal"
        android:layout_marginRight="63dp"
        android:measureAllChildren="false"
        android:layout_marginStart="56dp"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/viewImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:layout_alignTop="@+id/profilePicturePerfil" />
    //android:src="@drawable/camera"

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtUsername"
        android:layout_marginLeft="0dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/lblUsername"
        android:layout_alignStart="@+id/lblUsername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassword"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtName"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtLastName"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textColor="#ffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/txtEmail"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:textColor="#ffffff" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Username"
        android:id="@+id/lblUsername"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/viewImage"
        android:textColor="#ffffff"
        android:layout_alignTop="@+id/viewImage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Password"
        android:id="@+id/textView3"
        android:layout_marginLeft="0dp"
        android:layout_alignStart="@+id/lblUsername"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txtUsername"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name"
        android:id="@+id/textView4"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/txtPassword"
        android:layout_alignStart="@+id/txtPassword"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name"
        android:id="@+id/textView5"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/textView6"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/txtLastName"
        android:layout_alignStart="@+id/txtLastName"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff" />

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/btnSelectPhoto"
        android:src="@drawable/camera"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignStart="@+id/viewImage"
        android:layout_marginLeft="87dp"
        android:layout_below="@+id/viewImage" />

    <ImageButton
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:id="@+id/btnSave"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:src="@drawable/save"
        android:background="@android:color/transparent"
        android:scaleType="fitXY" />

</RelativeLayout>
